<h1>FilmPitch</h1>
<div class="form">
<%= form_for(@user, url: new_user_path) do |f| %>

<% if @user.errors.any? %>
<div id="error_explanation">
    <h2>There were some errors:</h2>
    <ol>
    <% @user.errors.full_messages.each do |message| %>
    <li>
    <%= message %>
    </l1>
    <% end %>
    </ol>
    </div>
    <% end %>

<div class="field<%= ' field_with_errors' if @user.errors.any? %>">
    <%= f.label :name %>
    <%= f.text_field :name %>
</div>
    <br>

<div class="field<%= ' field_with_errors' if @user.errors.any? %>">
    <%= f.label :username %>
    <%= f.text_field :username %>
</div>

    <br>

<div class="field<%= ' field_with_errors' if @user.errors.any? %>">
    <%= f.label :email %>
    <%= f.email_field :email %>
</div>

    <br>

<div class="field<%= ' field_with_errors' if @user.errors.any? %>">
    <%= f.label :password %>
    <%= f.password_field :password %>
</div>

    <br>

<div class="field<%= ' field_with_errors' if @user.errors.any? %>">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.hidden_field :wallet, value: 0 %>
</div>

    <br>

    <%= f.submit %>
    <% end %>
</div>

<h3>Already have an account? <%= link_to "Log in", login_path %></h3>
<h3>Login through Twitter? <%= link_to "Log in", '/auth/twitter' %></h3>